<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}"
    android:background="#ff0099cd">

    <EditText
        android:id="@+id/editWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="Enter a weight to convert"
        android:textColorHint="#ffffff"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/txtWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:layout_marginRight="80dp"
        android:gravity="end"
        android:layout_marginTop="125dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnPounds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editWeight"
        android:text="Convert to Pounds"
        android:onClick="toPounds"
        android:background="#ff4c5df6"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnKilograms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convert to Kilograms"
        android:onClick="toKilograms"
        android:background="#ff4c5df6"
        android:textColor="#ffffff"
        android:layout_below="@+id/btnPounds"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Answer will appear here"
        android:id="@+id/textView5"
        android:layout_below="@+id/btnKilograms"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:src="@drawable/weight"
        android:layout_marginTop="45dp" />

</RelativeLayout>